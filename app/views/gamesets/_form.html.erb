    <%= f.label :starttime %><br>
    <%= f.datetime_select :starttime %>
  </div>

  <div class="form-group">
    <%= f.label :game_id %><br>
    <%= collection_check_boxes :gameset, :game_ids, Game.all, :id, :name %>
