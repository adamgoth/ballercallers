<p id="notice"><%= notice %></p>

<h1><%= @gameset.name %></h1>

<p>
  <strong>League:</strong>
  <%= @gameset.league %>
</p>

<p>
  <strong>Gameset Start Time:</strong>
  <%= @gameset.eastern_time.strftime("%a %b %d %I:%M %p EST") %>
</p>

<p>
  <strong>Number of Games:</strong>
  <%= @gameset.games.count %>
 </p>

<table class="table">
  <thead>
    <tr>
      <th>Away</th>
      <th>Home</th>
      <th>Start Time</th>       
    </tr>
  </thead>
    <tbody>
      <tr>
      <% @gameset.games.order("id ASC").each do |game| %>
        <td><%= game.away_team.full_team_name %></td>
        <td><%= game.home_team.full_team_name %></td>
        <td><%= game.starttime.advance(:hours => -5).strftime("%a %b %d %I:%M %p EST") %></td>
      <tr>
      <% end %>
    <tbody>
</table>    
 


<%= link_to 'Back to Gamesets', gamesets_path, class: 'btn btn-info btn-sm' %>
<br><br>
<%= link_to 'Edit', edit_gameset_path(@gameset), class: 'btn btn-danger btn-sm' %>
<br><br>
<%= link_to 'New Gameset', new_gameset_path, class: 'btn btn-warning btn-sm'%>
<br><br>
<%= link_to 'Back to Contests', contests_path, class: 'btn btn-info btn-sm' %>

